class Event: public Registration{
    
    int graph[100][8];
    int element;
    string circle[8]={"A","B","C","D","E","F","G","H"};
    string Group_events[2]={"4*100M" , "4*200M"};
    string Solo_events [5]={"100M","200M","400M","HURDLES","OBSTACLES"};
    public:

    void copy(Registration r){
        flag_size=r.flag_size;
        for(int i=0; i<flag_size; i++){
            for(int j=0; j<4; j++){
                reg[i][j]=r.reg[i][j];
            }
        }
        for(int k=0; k<flag_size; k++){
            for(int l=0; l<7; l++){
                events[k][l]==r.events[k][l];
            }
        }
        p0=r.p0;
        p1=r.p1;
        p2=r.p2;
        p3=r.p3;
        p4=r.p4;
        p5=r.p5;
        p6=r.p6;
    }

    void Euler_path(){
        int vertices{0};
        string array[100]; //temp array for storing 
        int count{0};
        cout<<"Choose event: 0. 100M,  1. 200M, 2. 400M, 3. HURDLES, 4. OBSTACLES, 5. 4*100M REALY, 6. 4*200M RELAY"<<endl;
        cin>>element; 
        for(int i=0; i<flag_size; i++){
            if(events[i][element]==1){
                //cout<<reg[i][0];
                array[count]=reg[i][0];
                count++;
                //cout<<"count is: "<<count<<endl;
            }
        }
       // for(int i=0;i<count;i++){
             //  cout<<array[i]<<endl;
        //}
        if (element==0){
            vertices=2;
        }
        if(element==1){
            vertices=4;
        }
        if(element==2){
            vertices=8;
        }
        if(element==3){
            vertices=8;
        }
        if(element==4){
            vertices=8;
        }
        if(element==5){
            vertices=2;
        }
        if(element==6){
            vertices=4;
        }
        cout<<"WRITE THE NUMBER OF TIMES THE ATHLETE PASSED THE EDGE. ENTER 0 INSTEAD."<<endl;
	    if(count!=0){
            for(int i=0;i<count;i++){
                cout<<"Enter for "<<array[i]<<endl;
	            for(int a=0;a<vertices;a++){
	                cout<<"POINT : "<<circle[a]<<endl;
	                cin>>graph[i][a];
                    for(int b=vertices; b<8; b++){
                        graph[i][b]=0;
                    }
	            } 
	        }
        }
        cout<<"Records entered successfully."<<endl;
        int c;
        int j=0;
        int counter;
        for(int a=0;a<count;a++){
            c=0;
            counter=0;
        if (element==0){
            for(int i=0;i<2;i++){
                if(graph[a][i]>=1){
                
                   c+=graph[a][i];
                   counter++;  
                
                }
                else{
                    break;
                }

            }
            if(c==2 && counter==2){
                cout<<array[a]<<": Event completed successfully."<<endl;                   
            }  
            else if(c>2 && counter==2){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
              else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }

 
        if (element==1){
            for(int i=0;i<4;i++){
                if(graph[a][i]>=1){
                   
                   c+=graph[a][i];  
                   counter++;
                }
                else{
                    break;
                }

            }
            if(c==4 && counter==4){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>4 && counter==4){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }

        if (element==2){
            for(int i=0;i<8;i++){
                if(graph[a][i]>=1){
                   c+=graph[a][i];  
                   counter++;
                }
                else{
                    break;
                }

            }
            if(c==8 && counter==8){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>8 && counter==8){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }
        
        if (element==3){
            for(int i=0;i<8;i++){
                if(graph[a][i]>=1){
                   c+=graph[a][i]; 
                   counter++; 
                }
                else{
                    break;
                }

            }
            if(c==8 && counter==8){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>8 && counter==8){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }


        if (element==4){
            for(int i=0;i<8;i++){
                if(graph[a][i]>=1){
                   c+=graph[a][i];
                   counter++;  
                }
                else{
                    break;
                }

            }
            if(c==8 && counter==8){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>8 && counter==8){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }


        if (element==5){
            for(int i=0;i<2;i++){
                if(graph[a][i]>=1){
                   c+=graph[a][i];  
                   counter++;
                }
                else{
                    break;
                }

            }
            if(c==2 && counter==2){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>2 && counter==2){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }

        if (element==6){
            for(int i=0;i<4;i++){
                if(graph[a][i]==1){
                   c+=graph[a][i]; 
                   counter++; 
                }
                else{
                    break;
                }

            }
            if(c==4 && counter==4){
                cout<<array[a]<<": Event completed successfully."<<endl;
            }
            else if(c>4 && counter==4){
                cout<<array[a]<<": Even completed but taken longer path."<<endl;
            }
            else{
                cout<<array[a]<<": Event not completed."<<endl;
            }
        }

        }

	}
    

    int numberOfMatches() {
        int n;
        int op;
        cout<<"Which event do you want to check the rounds for: 0.100M 1.200M 2.400M 3.HURDLES 4.OBSTACLES 5.4*100M 6.4*200M"<<endl;
        cin>>op;
        int ct=0;
        int round =0;
        if(op==0){
            n=p0;
            cout<<"Number of participants are: "<<p0<<endl;
        }
        else if(op==1){
            n=p1;
            cout<<"Number of participants are: "<<p1<<endl;
        }
        else if(op==2){
            n=p2;
            cout<<"Number of participants are: "<<p2<<endl;
        }
        else if(op==3){
            n=p3;
            cout<<"Number of participants are: "<<p3<<endl;
        }
        else if(op==4){
            n=p4;
            cout<<"Number of participants are: "<<p4<<endl;
        }
        else if(op==5){
            n=p5;
            cout<<"Number of participants are: "<<p5<<endl;
        }
        else if(op==6){
            n=p6;
            cout<<"Number of participants are: "<<p6<<endl;
        }
        else{
         cout<<"Incorrect entry"<<endl;
        }
        cout<<"Number of participants in one heat: 2"<<endl;
        while(n>=1)
        {
            if(n%2==0)
            { 
                ct+=n/2; n=n/2;            // ct is for total number of matches being displayed in the end
                cout<<"Round "<<++round<<" ,matches "<<n<<endl;
            }
            else
                {ct+=n/2 + 1; n=(n/2+1);
                    cout<<"Round "<<++round<<" : Matches "<<n<<endl;
                }
            if(n==1) break; 
        }
        cout<<"Total number of matches are: "<<ct<<endl;
        return ct;
    }   
  
};



